extends layout

block content
  h1 #{title}
  form(action="POST")
    div.form-group
      label(for='name') Name:
      input#name(type='text' name='name' required='true')

    div.form-group
      label(for='type') Type: 
      select#type(type='select' name='type' required='true')
        each type in type_list
          option(value=type.name) #{type.name} 
    
    div.form-group
      label(for='type_2')  Type (for dual types): 
      select#type_2(type='select' name='type_2')
        option (none)
        each type in type_list
          option #{type.name}

    div.form-group
      label(for='evolvesFrom') Evolves From:
      input#evolvesFrom(type='search' name='text')

    div.form-group
      label(for='evolvesTo') Evolves To:
      input#evolvesTo(type='search' name='text')

    div.form-group
      label(for='desc') Description:
      input#desc(type='text' name='desc' required='true')
    
    div.form-group
      label(for='ability') Ability:
      input#ability(type='text' name='ability' required='true')

    div.form-group
      label(for='height') Height:
      input#height(type='number' name='height' required='true')

    div.form-group
      label(for='weight') Weight:
      input#weight(type='number' name='weight' required='true')

    button(type='submit') Submit